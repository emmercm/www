{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'schedule:monthly',
  ],
  dependencyDashboard: true,
  configMigration: true,
  timezone: 'America/Los_Angeles',
  assignees: [
    '@emmercm',
  ],
  reviewers: [
    '@emmercm',
  ],
  assignAutomerge: false,
  vulnerabilityAlerts: {
    labels: [
      'security',
    ],
    platformAutomerge: true,
    groupName: '',
    schedule: [],
    dependencyDashboardApproval: false,
    minimumReleaseAge: '',
    rangeStrategy: 'update-lockfile',
    commitMessageSuffix: '[SECURITY]',
    branchTopic: '{{{datasource}}}-{{{depName}}}-vulnerability',
    prCreation: 'immediate',
  },
  separateMultipleMajor: true,
  separateMajorMinor: true,
  separateMinorPatch: false,
  prConcurrentLimit: 3,
  rangeStrategy: 'pin',
  minimumReleaseAge: '3 days',
  internalChecksFilter: 'strict',
  packageRules: [
    {
      matchUpdateTypes: [
        'pin',
      ],
      commitMessageAction: 'pin',
      groupName: 'dependency ranges',
      schedule: 'at any time',
      prCreation: 'immediate',
      automerge: true,
    },
  ],
  npmrc: '@fortawesome:registry=https://npm.fontawesome.com/\n@awesome.me:registry=https://npm.fontawesome.com/\n//npm.fontawesome.com/:_authToken={{ secrets.FONT_AWESOME_TOKEN }}',
  npm: {
    lockFileMaintenance: {
      enabled: true,
      schedule: 'on the 28th day of the month',
      commitMessageAction: 'update',
      commitMessageTopic: 'lockfile',
    },
    packageRules: [
      {
        matchUpdateTypes: [
          'patch',
          'minor',
        ],
        groupName: 'Back-End',
      },
      {
        matchUpdateTypes: [
          'patch',
          'minor',
        ],
        groupName: 'Front-End',
        matchPackageNames: [
          '@fortawesome/fontawesome-pro',
          'bootstrap',
          'highlight.js',
          'jquery',
        ],
      },
      {
        matchPackageNames: [
          'metalsmith-twitter-card',
        ],
        allowedVersions: '!/^1.0.[5689]$/',
      },
      {
        matchDepTypes: [
          'optionalDependencies',
          'peerDependencies',
          'engines',
        ],
        enabled: false,
      },
    ],
  },
}
