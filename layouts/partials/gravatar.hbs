<picture>
    <source srcset="{{gravatar.main}}?r=g&d=mp&s={{multiply size 2}}" media="(min-width:{{multiply size 2}}px)">
    <source srcset="{{gravatar.main}}?r=g&d=mp&s=197" media="(min-width:197px)">
    <source srcset="{{gravatar.main}}?r=g&d=mp&s=170" media="(min-width:170px)">
    <img src="{{gravatar.main}}?r=g&d=mp&s={{size}}" alt="{{sitename}}" class="{{class}}" width="{{size}}" height="{{size}}">
</picture>
