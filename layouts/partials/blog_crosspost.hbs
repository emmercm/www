<div class="mx-0 my-4 mx-sm-4 my-sm-5 mx-md-5 br-2 shadow">
    <!-- Because of course "files" isn't exposed as metadata, we have to find files via collections -->
    {{#each (unique_by (flat (array_values collections)) "path")}}
        {{#eq path ../path}}
            {{>blog_card data=this tags=false bg="lighter"}}
        {{/eq}}
    {{/each}}
</div>
