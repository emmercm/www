<div class="row d-flex justify-content-center align-items-stretch">
    {{#each data}}
        <div class="col-12 {{#equalsLength ../data 1}}col-xl-12{{else equalsLength ../data 2}}col-xl-6{{else and @first (eq (modulo (length ../data) 4) 0)}}col-xl-12{{else and (lt @index 2) (eq (modulo (length ../data) 5) 0)}}col-xl-6{{else}}col-xl-4{{/equalsLength}} p-2 p-md-3">
            <div class="h-100 p-4 br-md-2 bg-light">
                <h1>
                    <a href="{{ path.href }}" class="text-dark">{{ title }}</a>
                </h1>
                <h5 class="mt-0"><small class="text-muted">{{moment this.date "MMMM D, YYYY"}} by {{ ../sitename }}</small></h5>
                <p>{{sanitize excerpt}}</p>
                <p>
                    <a href="{{ path.href }}">Read more</a>
                </p>
            </div>
        </div>
    {{/each}}
</div>
