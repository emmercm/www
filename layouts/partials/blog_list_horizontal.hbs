<div class="row row-cols-1 {{#gt (length data) 1}}row-cols-sm-2{{/gt}} {{#gt (length data) 2}}row-cols-lg-3{{/gt}} align-items-stretch mx-0">
    {{#each data}}
        <div class="col p-3">
            <div class="d-flex flex-column h-100 bg-light br-2 overflow-hidden">
                <div class="row no-gutters h-100">
                    <div class="col-{{#if image}}9{{else}}12{{/if}} d-flex flex-column p-3">
                        <p class="mb-1 font-weight-bold">
                            <a href="{{paths.href}}" title="{{title}}" class="text-dark">{{ title }}</a>
                        </p>
                        <p class="text-muted">
                            {{moment this.date "MMM D, YYYY"}} &middot; {{this.readingTime}}
                        </p>
                        {{#if tags}}
                            <div class="d-flex flex-wrap m-n1 mt-auto">
                                {{#each (sort tags)}}
                                    <h5 class="m-1 mw-100">
                                        <a href="/blog/tag/{{this}}" title="{{this}}" class="badge badge-{{get "color" (get this ../../blog_tags)}} mw-100 text-break text-wrap">{{ this }}</a>
                                    </h5>
                                {{/each}}
                            </div>
                        {{/if}}
                    </div>
                    {{#if image}}
                        <a href="{{paths.href}}" title="{{title}}" class="col-3 d-flex justify-content-center align-items-center overflow-hidden">
                            <img data-src="{{image}}-thumb.*" alt="{{sanitize title}}" class="h-100">
                        </a>
                    {{/if}}
                </div>
            </div>
        </div>
    {{/each}}
</div>
