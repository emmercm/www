<div>
    {{#each data}}
        <div class="row no-gutters">
            <div class="col-sm-2">
                <a href="{{ paths.href }}">
                    {{#if (match (readdir "src/static/img/blog") (concat "**/" (stem paths.dir) ".*"))}}
                        <img data-src="**/static/img/blog/{{stem paths.dir}}-thumb.*" alt="{{sanitize title}}" class="w-100">
                    {{else}}
                        <img data-src="**/static/img/blog/default-thumb.*" alt="{{sanitize title}}" class="w-100">
                    {{/if}}
                </a>

<!--                {{#if tags}}-->
<!--                    <div class="d-flex align-items-start justify-content-center flex-wrap mt-2">-->
<!--                        {{#each tags}}-->
<!--                            <h5 class="m-0">-->
<!--                                <a href="/blog/tag/{{this}}" title="{{this}}" class="badge badge-{{get "color" (get this ../../blog_tags)}} m-1">{{ this }}</a>-->
<!--                            </h5>-->
<!--                        {{/each}}-->
<!--                    </div>-->
<!--                {{/if}}-->
            </div>

            <div class="col-sm-10 pl-sm-4">
                <div class="d-flex align-items-start justify-content-between mb-3">
                    <div>
                        <h3 class="d-flex align-items-start justify-content-between mt-4 mt-sm-0">
                            <a href="{{ paths.href }}" class="text-dark">{{ title }}</a>
                        </h3>
                        <h5 class="mt-0">
                            <small class="text-muted">{{moment this.date "MMM D, YYYY"}} &middot; {{this.readingTime}}</small>
                        </h5>
                    </div>
                    <div class="ml-4">
                        {{#if tags}}
                            <div class="d-flex flex-column align-items-end flex-wrap">
                                {{#each tags}}
                                    <h5 class="{{#unless @first}}mt-1{{else}}mt-0{{/unless}} mb-0">
                                        <a href="/blog/tag/{{this}}" title="{{this}}" class="badge badge-{{get "color" (get this ../../blog_tags)}}">{{ this }}</a>
                                    </h5>
                                {{/each}}
                            </div>
                        {{/if}}
                    </div>
                </div>
                <p>{{{sanitize excerpt}}}</p>
            </div>
        </div>

        {{#unless @last}}
            <hr class="my-5">
        {{/unless}}
    {{/each}}
</div>
